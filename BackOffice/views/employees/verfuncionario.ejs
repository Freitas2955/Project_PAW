<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Editar Funcionário</title>
    <link rel='stylesheet' href='/stylesheets/utilizadores/registarfuncionario.css' />
    <link rel='stylesheet' href='/stylesheets/style.css' />
</head>

<body>
    <%- include('../general/header',{username:username, userId:userId}) -%>
        <main>
            <%- include('../general/sidebar', { activeItem: 'pagina3' }) -%>
                <div class="content">
                    <h2>Informação Funcionário</h2>
                    <form action="/employees/update/<%=employee._id %>" method="post" enctype="multipart/form-data">
                        <div id="formContent">
                            
                            <div id="leftside">
                                <div id="preview-container">
                                    <img id="preview-image" src="../../images/employees/<%=employee.id %>.jpg" alt="Imagem existente">
                                </div>
                            </div>

                            <div id="rightside">
                                <div class="inputContainer">
                                    <label for="name">Nome:</label>
                                    <input type="text" id="name" name="name" value="<%=employee.name %>" readonly>
                                </div>
                                <div class="inputContainer">
                                    <label for="phone">Telemóvel:</label>
                                    <input type="tel" id="phone" name="phone" value="<%=employee.phone %>" readonly>
                                </div>
                                <div class="inputContainer">
                                    <label for="email">Email:</label>
                                    <input type="email" id="email" name="email" value="<%=employee.email %>"
                                    readonly>
                                </div>
                                <div class="inputContainer">
                                    <label for="address">Morada:</label>
                                    <input type="text" id="address" name="address" value="<%=employee.address %>"
                                    readonly>
                                </div>
                                <div class="inputContainer">
                                    <label for="postCode">Código-Postal:</label>
                                    <input type="text" id="postCode" name="postCode" value="<%=employee.postCode %>"
                                    readonly>
                                </div>
                                <div class="inputContainer">
                                    <label for="city">Cidade:</label>
                                    <input type="text" id="city" name="city" value="<%=employee.city %>" readonly>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
        </main>

        <script>
            function previewImage(event) {
            const input = event.target;
            const reader = new FileReader();
        
            reader.onload = function() {
                const imgElement = document.createElement('img');
                imgElement.src = reader.result;
                imgElement.style.maxWidth = '100%';
                imgElement.style.maxHeight = '100%';
        
                const previewContainer = document.querySelector('#preview-container');
                previewContainer.innerHTML = ''; 
                previewContainer.appendChild(imgElement);
            };
        
            reader.readAsDataURL(input.files[0]);
        }
        </script>
</body>
</html>